    // Modules configuration
    "hyprland/workspaces": {
        "disable-scroll": true,
        "warp-on-scroll": false,
        "sort-by": "id",
        "format": "{icon}",
        "format-icons": {
          "1": "a",
          "2": "s",
          "3": "d",
          "4": "f",
          "5": "z",
          "6": "x",
          "7": "c",
          "8": "v"
        }
    },
    "hyprland/language": {
      "format-he": "<span color='#fb4934'>he</span>",
      "format-en": "en"
    },
    "keyboard-state": {
        "numlock": true,
        "capslock": true,
        "format": "{name} {icon}",
        "format-icons": {
            "locked": "ï€£",
            "unlocked": "ï‚œ"
